<%= for project <- @projects  do %>
  <div class="mb-6">
    <h3 class="text-xl font-bold">
      <a href="<%= project.url %>" target="_blank">
        <%= project.name %>
      </a>
      &nbsp;<span class="opacity-50 text-base"><%= project.duration %></span>
    </h3>
    <p class="mt-1"><%= project.description %></p>
  </div>
<% end %>
